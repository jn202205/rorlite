<h1>Create a new cat</h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action="/cats" method="POST">
  <label>Name:
    <input type="text" name="cat[name]" value="<%= @cat.name %>">
  </label>
  <br />
  <label>Owner:
    <select name="cat[owner_id]">
      <option value="NULL">Stray</option>
      <% Human.all.each do |human| %>
        <option value="<%= human.id %>"><%= human.fname %></option>
      <% end %>
    </select>
  </label>

  <input type="submit">
</form>
<br />
<%= link_to "All Cats", cats_path %> |
<%= link_to 'All Houses', houses_path %> |
<%= link_to 'All Humans', humans_path %>
